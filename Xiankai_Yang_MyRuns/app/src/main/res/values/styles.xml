<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="LayoutStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="HorizontalLayout" parent="LayoutStyle">
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="TextViewStyle" parent="LayoutStyle">
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
    </style>

    <style name="EditTextStyle" parent="LayoutStyle">
        <item name="android:maxLines">1</item>
        <item name="app:backgroundTint">@android:color/background_dark</item>
    </style>

    <style name="ButtonStyle" parent="LayoutStyle">
        <item name="android:layout_margin">10dp</item>
        <item name="app:backgroundTint">@android:color/background_dark</item>
    </style>

</resources>
